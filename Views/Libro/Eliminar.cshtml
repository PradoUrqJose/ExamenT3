@model T3_Prado_Jose_Gonzales_Diego.Models.Libro;

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Eliminar Libro</h1>

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <h2 class="text-intro pl-3">¿Está seguro de Eliminar este Libro?</h2>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Titulo" class="form-label">Título</label>
                                <input asp-for="Titulo" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Autor" class="form-label">Autor</label>
                                <input asp-for="Autor" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Tema" class="form-label">Tema</label>
                                <input asp-for="Tema" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Editorial" class="form-label">Editorial</label>
                                <input asp-for="Editorial" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="AnioPublicacion" class="form-label">Año Publicación</label>
                                <input asp-for="AnioPublicacion" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Paginas" class="form-label">Páginas</label>
                                <input asp-for="Paginas" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Categoria" class="form-label">Categoría</label>
                                <input asp-for="Categoria" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary w-100">Eliminar</button>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <a asp-controller="Libro" asp-action="Index" class="btn btn-success w-100">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}