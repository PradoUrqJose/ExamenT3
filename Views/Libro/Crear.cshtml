@model T3_Prado_Jose_Gonzales_Diego.Models.Libro;
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Crear Nuevo Libro</h2>

<form method="post" asp-action="Crear">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Titulo" class="form-label">Título</label>
                                <input asp-for="Titulo" class="form-control" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Autor" class="form-label">Autor</label>
                                <input asp-for="Autor" class="form-control" />
                                <span asp-validation-for="Autor" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Tema" class="form-label">Tema</label>
                                <input asp-for="Tema" class="form-control" />
                                <span asp-validation-for="Tema" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Editorial" class="form-label">Editorial</label>
                                <input asp-for="Editorial" class="form-control" />
                                <span asp-validation-for="Editorial" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="AnioPublicacion" class="form-label">Año Publicación</label>
                                <input asp-for="AnioPublicacion" class="form-control" />
                                <span asp-validation-for="AnioPublicacion" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Paginas" class="form-label">Páginas</label>
                                <input asp-for="Paginas" class="form-control" />
                                <span asp-validation-for="Paginas" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Categoria" class="form-label">Categoría</label>
                                <input asp-for="Categoria" class="form-control" />
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary w-100">Agregar Nuevo</button>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <a asp-controller="Libro" asp-action="Index" class="btn btn-secondary w-100">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}